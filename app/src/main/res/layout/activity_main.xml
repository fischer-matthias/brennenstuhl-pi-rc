<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Raspberry pi IP"
            android:ems="10"
            tools:layout_editor_absoluteY="53dp" android:id="@+id/rapiIP"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TableLayout
            android:layout_width="395dp"
            android:layout_height="41dp" tools:layout_editor_absoluteY="106dp" tools:layout_editor_absoluteX="8dp"
            android:orientation="horizontal" android:gravity="center">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tv1"/>
            <TextView
                    android:text="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tv2"/>
            <TextView
                    android:text="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tv3"/>
            <TextView
                    android:text="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tv4"/>
            <TextView
                    android:text="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tv5"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="176dp"
                    tools:layout_editor_absoluteX="32dp" android:id="@+id/sys1"/>
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="183dp"
                    tools:layout_editor_absoluteX="94dp" android:id="@+id/sys2"/>
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="203dp"
                    tools:layout_editor_absoluteX="163dp" android:id="@+id/sys3"/>
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="120dp"
                    tools:layout_editor_absoluteX="133dp" android:id="@+id/sys4"/>
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="210dp"
                    tools:layout_editor_absoluteX="266dp" android:id="@+id/sys5"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>